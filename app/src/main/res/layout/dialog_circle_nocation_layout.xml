<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/circle_top_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48_dip"
        android:background="@color/white">

        <TextView
            android:id="@+id/circle_top_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48_dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="string/circle_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/common_text_size18" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/circle_top_rl">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/circle_notication_know_btn"
            android:layout_marginBottom="@dimen/dimen_20_dip"
            android:gravity="center"
            android:text="“点击”可在广场中发表微博哦!"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size14" />


        <Button
            android:id="@+id/circle_notication_know_btn"
            android:layout_width="@dimen/dimen_100_dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_empty_border_white"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size15" />

        <ImageView
            android:id="@+id/circle_notication_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_24_dip"
            android:layout_alignTop="@id/circle_notication_know_btn"
            android:rotation="120"
            android:src="@mipmap/notication_arrow" />


        <ImageView
            android:id="@+id/notication_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_93_dip"
            android:layout_marginRight="@dimen/dimen_23_dip"
            android:scaleType="center"
            android:src="@mipmap/add_circle_icon" />
    </RelativeLayout>


</RelativeLayout>
