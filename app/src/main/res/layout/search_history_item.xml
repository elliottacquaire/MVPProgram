<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dimen_43_dip">

    <LinearLayout
        android:id="@+id/linear_histroy"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/img_delete"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_43_dip">
        <ImageView
            android:layout_marginRight="@dimen/dimen_17_dip"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:src="@mipmap/search_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/common_text_size15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_17_dip"
        android:padding="@dimen/dimen_10_dip"
        android:src="@mipmap/search_history_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/item_down" />

</RelativeLayout>
