<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/earningdetail_network_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mian_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/exception_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/network_error_notication"
        android:textColor="@color/makemoney_earningdetail_title"
        android:textSize="@dimen/common_text_size14" />

</LinearLayout>