<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:paddingLeft="@dimen/dimen_16_dip"
              android:paddingRight="@dimen/dimen_16_dip"
              android:orientation="vertical"
              >

    <RelativeLayout
            android:layout_marginTop="@dimen/dimen_22_dip"
            android:layout_marginRight="@dimen/dimen_8_dip"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:layout_marginBottom="@dimen/dimen_20_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:id="@+id/tv_content"
                android:textColor="@color/text333"
                android:textSize="@dimen/common_text_size15"
                android:text="tring/channel_content"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/tv_tips"
                android:textColor="@color/text999"
                android:layout_centerVertical="true"
                android:textSize="@dimen/common_text_size11"
                android:text="ring/channel_tips"
                android:layout_toRightOf="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_finish"
                android:textColor="@color/tip_text_color"
                android:textSize="@dimen/common_text_size15"
                android:background="@drawable/channel_finish"
                android:text="tring/channel_finish"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dimen_49_dip"
                android:layout_height="@dimen/dimen_25_dip" />

    </RelativeLayout>

    <com.li.mvpprogram.widget.view.DragSortGridView
            android:id="@+id/dragSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </com.li.mvpprogram.widget.view.DragSortGridView>
</LinearLayout>
