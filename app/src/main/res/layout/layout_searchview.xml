<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_toLeftOf="@+id/tv_action"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xianglin.app.widget.view.SearchEditText
            android:id="@+id/et_search_input"
            style="@style/LimitEditText_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColorHint="@color/text999"
            android:textColor="@color/text333"
            android:imeOptions="actionDone"
            android:hint="string/str_search_tv_hint" />

        <ImageView
            android:id="@+id/iv_search_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dimen_10_dip"
            android:padding="@dimen/dimen_5_dip"
            android:src="@mipmap/find_friend_delete"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_action"
        android:text="搜索"
        android:padding="@dimen/dimen_10_dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/text333"
        android:textSize="@dimen/common_text_size16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
